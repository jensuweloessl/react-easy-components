{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "importHelpers": true,
    "noErrorTruncation": true,
    "lib": [
      "dom", "es6"
    ],
    "types": [
      "react"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}